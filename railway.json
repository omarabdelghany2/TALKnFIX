{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd frontend/api-craft-fe && npm install && npm run build"
  },
  "deploy": {
    "startCommand": "cd frontend/api-craft-fe && npx vite preview --host 0.0.0.0",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
